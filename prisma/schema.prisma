// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum State {
  NEW_HANOVER
  AMBARINO
  LEMOYNE
  WEST_ELIZABETH
  NEW_AUSTIN
}

enum Category {
  ANIMAL
  PLANT
  LEGENDARY_ANIMAL
}

enum SubCategory {
  DEFAULT
  CRITTER
}

model BaseEntity {
  id          String      @id @default(cuid())
  name        String      @unique
  category    Category
  subCategory SubCategory @default(DEFAULT)
  locations   Location[]
  comments    String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Location {
  id             String       @id @default(cuid())
  text           String
  locationDataId String
  locationData   LocationData @relation(fields: [locationDataId], references: [id])
  entities       BaseEntity[]
  comments       String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LocationData {
  id       String     @id @default(cuid())
  location Location[]
  region   String
  name     String?    @unique
  state    State
  comments String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User model to store user information
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  userName  String
  password  String
  //  data = [
  //   { id: 'asd123', trackerVals: [{ isKilled: true, isSkinned: false }] },
  //   { id: 'asd312', trackerVals: [{ isCollected: false }] },
  // ]
  data      Json?    @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([data])
  @@index([email])
  @@index([userName])
  @@index([data, email])
  @@index([data, userName])
  @@index([email, userName])
  @@index([data, email, userName])
}
